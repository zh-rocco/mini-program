.page-section .food {
  display: flex;
  height: 200rpx;
  margin-bottom: 40rpx;
  padding: 10rpx 15rpx;
}

.food--left, .food--right {
  display: inline-flex;
  height: 100%;
  box-sizing: border-box;
}

.food--left {
  width: 200rpx;
  overflow: hidden;
}

.food--left .image {
  height: 100%;
}

.food--right {
  flex: 1;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  margin-left: 16rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.food--right::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 2rpx;
  background-color: #e5e5e5;
}

.food--right .text {
  width: 100%;
}

.food--right .section {
  display: flex;
  font-size: 0;
}

.food--right .mini-btn {
  margin: 0;
}

.mini-btn:not(:last-child) {
  margin-right: 10rpx;
}
